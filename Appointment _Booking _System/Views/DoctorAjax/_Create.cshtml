@model Appointment__Booking__System.Models.ViewModels.DoctorViewModel

<div class="modal-header">
    <h5 class="modal-title">@((Model?.Id == 0) ? "Add Doctor" : "Edit Doctor")</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <form id="formCreateOrEdit">
        @Html.AntiForgeryToken()

        <input asp-for="Id" type="hidden" />

        <div class="form-group mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Gender"></label>
            <select asp-for="Gender" class="form-control">
                <option value="">-- Select Gender --</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="SpecialistIn"></label>
            <input asp-for="SpecialistIn" class="form-control" />
            <span asp-validation-for="SpecialistIn" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Status"></label>
            <select asp-for="Status" class="form-control">
                <option value="true">Active</option>
                <option value="false">Deactive</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <button type="submit" form="formCreateOrEdit" class="btn btn-success">Save</button>
</div>
